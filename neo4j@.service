[Unit]
Description=Neo4j
After=docker.service
Requires=docker.service

[Service]
Environment="DOCKER_APP_VERSION=latest"

TimeoutStartSec=0
# Change killmode from "control-group" to "none" to let Docker remove
# work correctly.
KillMode=none
ExecStartPre=-/bin/bash -c '/usr/bin/docker kill "$(docker ps -q --filter=name=^/%p-%i_)" > /dev/null 2>&1'
ExecStartPre=-/bin/bash -c '/usr/bin/docker rm "$(docker ps -q --filter=name=^/%p-%i_)" > /dev/null 2>&1'
ExecStartPre=/bin/bash -c 'docker history coco/ft-neo4j:$DOCKER_APP_VERSION > /dev/null 2>&1 || docker pull coco/ft-neo4j:$DOCKER_APP_VERSION'


# Also see https://neo4j.com/developer/docker-2-x/ for configuration options.
ExecStart=/bin/sh -c '\
    export ENV=$(/usr/bin/etcdctl get /ft/config/environment_tag); \
    export NEO4J_causalClustering_initialDiscoveryMembers=$(fleetctl list-machines -fields ip -no-legend | tr '.' '-' | xargs -I{} echo ip-{}.eu-west-1.compute.internal:5000| tr \'\n\' \',\' | rev | cut -c 2- | rev); \
    export ADVERTISED_ADDRESS=$(hostname | tr -d '[:space:]'); \
    /usr/bin/docker run --rm --name %p-%i_$(uuidgen) \
    -v /vol/neo4j/:/data \
    -p 7474:7474 \
    -p 7687:7687 \
    -p 7473:7473 \
    -p 5000:5000 \
    -p 6000:6000 \
    -p 7000:7000 \
    --env "NEO4J_AUTH=none" \
    --env "GRAPHITE_ENABLED=true" \
    --env "GRAPHITE_ADDRESS=graphite.ft.com:2003" \
    --env "GRAPHITE_PREFIX=coco.services.$ENV.neo4j.%i" \
    --env "NEO4J_dbms_memory_heap_maxSize=10G" \
    --env "NEO4J_dbms_memory_pagecache_size=18G" \
    --env "NEO4J_dbms_mode=CORE" \
    --env "NEO4J_causalClustering_expectedCoreClusterSize=3" \
    --env "NEO4J_causalClustering_initialDiscoveryMembers=$NEO4J_causalClustering_initialDiscoveryMembers" \
    --env "NEO4J_causalClustering_discoveryAdvertisedAddress=$ADVERTISED_ADDRESS:5000" \
    --env "NEO4J_causalClustering_transactionAdvertisedAddress=$ADVERTISED_ADDRESS:6000" \
    --env "NEO4J_causalClustering_raftAdvertisedAddress=$ADVERTISED_ADDRESS:7000" \
    coco/ft-neo4j:$DOCKER_APP_VERSION;'

ExecStop=-/bin/bash -c 'docker stop -t 3 "$(docker ps -q --filter=name=^/%p-%i_)"'
Restart=on-failure
RestartSec=60

[X-Fleet]
Conflicts=neo4j@*.service
